generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
}

enum QuoteStatus {
  pending
  reviewed
}

model QuoteSubmission {
  id                 String   @id @default(cuid())
  name               String
  company            String?
  email              String
  phone              String
  product            String
  quantity           Int
  notes              String?
  instagram          String?
  facebook           String?
  tiktok             String?
  referenceImagePath String?
  status             QuoteStatus @default(pending)
  createdAt          DateTime @default(now())

  @@index([status])
  @@index([createdAt])
}
